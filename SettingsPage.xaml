<Page
    x:Class="ClassScoreApp_WinUI3.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassScoreApp_WinUI3">

    <ScrollViewer Padding="40">
        <StackPanel Spacing="30" MaxWidth="600" HorizontalAlignment="Left">
            <TextBlock Text="设置与数据管理" Style="{StaticResource TitleTextBlockStyle}"/>

            <StackPanel Spacing="10">
                <TextBlock Text="数据导入" Style="{StaticResource SubtitleTextBlockStyle}"/>
                <TextBlock Text="你可以从 Excel 文件批量导入学生名单及其积分记录。" Opacity="0.6" TextWrapping="Wrap"/>
                <Button Content="选择 Excel 文件并导入" 
                        Click="ImportExcel_Click" 
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="20,10"/>

                <!-- 提示格式 -->
                <Border Background="{ThemeResource LayerFillColorDefaultBrush}" 
                        Padding="15" CornerRadius="8" Margin="0,10,0,0">
                    <TextBlock TextWrapping="Wrap" FontSize="12" Opacity="0.8">
                        <Run FontWeight="Bold" Text="Excel 格式说明："/>
                        <LineBreak/>
                        第一列：学生姓名 | 第二列：当前分数 | 第三列及以后：评价记录
                    </TextBlock>
                </Border>
            </StackPanel>

            <MenuFlyoutSeparator/>
        </StackPanel>
    </ScrollViewer>
</Page>