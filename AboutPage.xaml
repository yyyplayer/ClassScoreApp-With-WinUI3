<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ClassScoreApp_WinUI3.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassScoreApp_WinUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- 使用 ScrollViewer 确保内容多了可以滚动 -->
    <ScrollViewer Padding="40">
        <StackPanel MaxWidth="600" HorizontalAlignment="Left" Spacing="20">

            <!-- 标题区 -->
            <TextBlock Text="关于 班级积分管理工具（ClassScoreApp_WinUI3）" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="版本 1.0.1 (WinUI 3)" Opacity="0.6"/>

            <!-- 分割线 -->
            <MenuFlyoutSeparator/>

            <!-- 正文区：你可以直接用 TextBlock 堆叠 -->
            <TextBlock Text="软件简介" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <TextBlock TextWrapping="Wrap" Text="这是一个为了帮助老师更方便管理班级积分而开发的开源工具。采用最新的 WinUI 3 框架开发，支持 Mica 效果(仅Windows11)与响应式布局。"/>

            <TextBlock Text="开发说明" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <TextBlock TextWrapping="Wrap" Text="由 C# 与 XAML 构建。目前支持学生积分加减、历史记录追踪以及批量操作功能。"/>

            <!-- 友情提示：你可以用 HyperlinkButton 做链接 -->
            <HyperlinkButton Content="访问项目 GitHub 仓库" NavigateUri="https://github.com/yyyplayer/ClassScoreApp-With-WinUI3" />

            <TextBlock Text="2026 yyyplayer." Margin="0,40,0,0" Opacity="0.4"/>
        </StackPanel>
    </ScrollViewer>
</Page>
