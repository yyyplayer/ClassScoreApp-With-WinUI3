<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ClassScoreApp_WinUI3.ListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassScoreApp_WinUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 排序按钮区 -->
            <RowDefinition Height="*"/>
            <!-- 列表区 -->
        </Grid.RowDefinitions>

        <!-- 排序工具栏 -->
        <CommandBar Background="Transparent" DefaultLabelPosition="Right">
            <AppBarButton Icon="Sort" Label="姓名 (A-Z)" Click="SortByName_Click"/>
            <AppBarButton Icon="FourBars" Label="分数 (从高到低)" Click="SortByScore_Click"/>
            <AppBarButton Icon="Refresh" Label="恢复默认" Click="ResetSort_Click"/>
        </CommandBar>

        <!-- 学生列表 -->
        <ListView x:Name="StudentListView" Grid.Row="1" Margin="0,10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Student">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{x:Bind Name}" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind Score}" 
                                   Foreground="Red" FontWeight="Bold" FontSize="18"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
